@using BookingAds.Areas.Admin.Models.ManageEmployee
@model BookingAds.Areas.Admin.Models.ManageEmployee.ViewManageEmployee
@{
    ViewBag.Title = "Quản lý khách hàng";
}
<ol class="breadcrumb" style="background-color: #fff;">
    <li><a href="~/Admin">Trang chủ</a></li>
    <li class="active">Quản lý khách hàng</li>
</ol>

<form id="formFilter" class="area-filter" style=" padding: 10px 0;" action="~/Admin/ManageEmployee/Filter" method="POST">
    <div class="row " style="width:auto;">

        <div class="col-lg-1 col-md-3 col-sm-2 ">
            <a href="~/Admin/ManageEmployee/Report" class="btn btn-success">
                <i class="glyphicon glyphicon-file"></i> 
                Xuất file Excel
            </a>
        </div>

        <div class="col-lg-3 col-lg-offset-4 col-sm-3 col-md-3 col-sm-offset-1 col-xs-12">
            <select id="gender" class="form-control" name="Gender">
                <option value="@FilterGender.Default" 
                        selected="@(Model.Gender == FilterGender.Default)">--Lọc theo giới tính--</option>
                <option value="@FilterGender.Man" 
                        selected="@(Model.Gender == FilterGender.Man)">Nam</option>
                <option value="@FilterGender.Woman" 
                        selected="@(Model.Gender == FilterGender.Woman)">Nữ</option>
            </select>
        </div>
        <div class="col-lg-4 col-sm-4 col-md-6 col-xs-12" style="display:flex;">
            <select id="field" class="form-control" name="Field" style="width: 45%;">
                <option value="@FilterField.FullName" 
                        selected="@(Model.Field == FilterField.FullName)">Họ và tên</option>
                <option value="@FilterField.LastName" 
                        selected="@(Model.Field == FilterField.LastName)">Họ và tên đệm</option>
                <option value="@FilterField.FirstName" 
                        selected="@(Model.Field == FilterField.FirstName)">Tên khách hàng</option>
            </select>

            @*class="col-lg-3 col-sm-3 col-md-3 col-xs-12"*@
            <div style="display:flex;">
                <input id="searchValue" name="searchValue" value="@Model.SearchValue" type="text" class="form-control" 
                       style="border-radius: 5px;" placeholder="Tìm kiếm...">
                <button id="btnFilter" type="button" class="btn btn-warning">Lọc</button>
            </div>

        </div>
    </div>

</form>




<div id="filterResult" class="table-responsive"></div>

<input type="hidden" id="currentPageSize" value="@Model.CurrentPageSize" />

@section Scripts {
    <script src="~/Scripts/Admin/ManageEmployee/index.js"></script>
}



