<script>
    function showJnWaiting(popup_id = 'jn_waiting_popup') {
        $('#' + popup_id + '_bg').css('z-index', 10);
        $('#' + popup_id + '_bg').show();
        let pop = $('#' + popup_id);
        let pos = getPos(pop);
        pop.css('top', pos.x+'px');
        pop.css('left', pos.y+'px');
        pop.css('display', 'block');
    }
    function closeJnWaiting(popup_id = 'jn_waiting_popup') {
        $('#' + popup_id + '_bg').css('z-index', -1);
        $('#' + popup_id + '_bg').hide();
        $('#' + popup_id).hide(200);
    }
    function getPos(pop) {
        let popWidth = pop.outerWidth();
        let popHeight = pop.outerHeight();
        let viewWidth = $(window).width();
        let viewHeight = $(window).height();
        let x = Math.round( (viewHeight - popHeight) / 2 );
        let y = Math.round( (viewWidth - popWidth) / 2 );
        return {x : x, y : y};
    }
</script>
